    @model Moviy.App.ViewModels.BusViewModel

@{
    ViewData["Title"] = "Novo Veículo";
}

<h3 style="padding-top: 50px">@ViewData["Title"] </h3>

<hr />
<div class="row">
    <div class="col-md-10">
        <form enctype="multipart/form-data" asp-action="Create">

            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <vc:Summary></vc:Summary>


            <div class="form-group">
                <label asp-for="BusNumber" class="control-label"></label>
                <input asp-for="BusNumber" class="form-control" />
                <span asp-validation-for="BusNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LicensePlate" class="control-label"></label>
                <input asp-for="LicensePlate" class="form-control" />
                <span asp-validation-for="LicensePlate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BusColor" class="control-label"></label><br />
                <input type="radio" value="1" asp-for="BusColor" checked /> Red<br />
                <input type="radio" value="2" asp-for="BusColor" /> Blue <br />
                <input type="radio" value="3" asp-for="BusColor" /> Green <br />
                <input type="radio" value="4" asp-for="BusColor" /> Yellow <br />
            </div>
            <div class="form-group">
                <label asp-for="BusSize" class="control-label"></label><br />
                <input type="radio" value="1" asp-for="BusSize" checked /> Large<br />
                <input type="radio" value="2" asp-for="BusSize" /> Small <br />
                <input type="radio" value="3" asp-for="BusSize" /> Medium <br />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>
