@*@using Moviy.App.Extensions*@
@model IEnumerable<Moviy.App.ViewModels.DriverViewModel>


@{
    ViewData["Title"] = "Motoristas";
}

<h1>@ViewData["Title"]</h1>

<hr />
@*<p supress-by-claim-name="Bus" supress-by-claim-value="Adicionar">*@
<a class="btn btn-info" asp-action="Create">Novo Motorista</a>
@*</p>*@
<br />
<br />
<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                Foto Motorista
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverLicense)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Document)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/images/@item.Image" alt="@item.Image" style="width:120px; height:120px"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DriverLicense)
                </td>
                <td>
                    @Html.DisplayFor(modelItem =>item.Document)
                </td>
                <td>
                    @Html.DisplayFor(modelItem =>item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem =>item.IsActive)
                </td>
                <td class="text-right">
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"><spam class="fa fa-search"></spam></a>
                    <a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id"><spam class="fa fa-pencil-alt"></spam></a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><spam class="fa fa-trash"></spam></a>
                </td>
            </tr>
        }
    </tbody>
</table>