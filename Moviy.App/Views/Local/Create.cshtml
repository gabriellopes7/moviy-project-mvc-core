    @model Moviy.App.ViewModels.LocalViewModel

@{
    ViewData["Title"] = "Novo Ponto";
}


<h3 style="padding-top: 50px">@ViewData["Title"] </h3>

<hr />

<div class="row">
    <div class="col-md-10">
        <form enctype="multipart/form-data" asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label><br />
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="State" class="control-label"></label><br />
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label><br />
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
                <div class="form-group">
                <label asp-for="District" class="control-label"></label><br />
                <input asp-for="District" class="form-control" />
                <span asp-validation-for="District" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Street" class="control-label"></label><br />
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label><br />
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
             <br />   
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Adicionar Ponto" class="btn btn-success"/>
                <a asp-action="Index" asp-controller="LineRoute" class="btn btn-info" value="Voltar">Voltar</a>
            </div>
        </form>        
   </div>
</div>
@section Scripts{
    <script>
        BuscaCep();
    </script>
}
